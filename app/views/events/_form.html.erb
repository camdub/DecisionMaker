<%= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Event</legend>

    <%= f.input :title %>
    <%= f.input :location %>

    <%= f.input :date_range %>

    <h3>Event Participants</h3>

    <%= f.fields_for :participants do |builder| %>
      <%= render 'participant_fields', f: builder %>
    <% end %>

    
    <%= link_to_add_fields "Add Participant", f, :participants %>
    </fieldset>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', events_path, :class => 'btn' %>
    </div>

<% end %>
